@page "/"

<PageTitle>
    FFXIV Character Job Levels
</PageTitle>

<EditForm Model="@LodeStoneCharacter">
    <MudStack>
        <MudInput Label="Lodestone ID"
                  T="long?"
                  @bind-Value="@LodeStoneCharacter.LodestoneId"
                  AutoFocus
                  Immediate />
        <MudButton ButtonType="@ButtonType.Submit"
                   OnClick="@OnButtonClick"
                   Variant="@Variant.Filled"
                   Color="@Color.Primary"
                   Disabled="@ButtonDisabled">
            Get Data
        </MudButton>
    </MudStack>
</EditForm>
